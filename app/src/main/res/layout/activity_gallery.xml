<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="16dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="16dp"
    android:background="@drawable/gbg"
    tools:context="sg.com.kaplan.cityweather.Gallery">


    <android.support.v4.view.ViewPager
        android:id="@+id/viewPager"
        android:layout_width="match_parent"
        android:layout_height="248dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true">

    </android.support.v4.view.ViewPager>

    <Button
        android:id="@+id/playbtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/viewPager"
        android:layout_marginStart="13dp"
        android:layout_marginTop="42dp"
        android:onClick="playBgm"
        android:text="Play"
        android:textSize="18sp" />

    <Button
        android:id="@+id/pausebtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/playbtn"
        android:layout_alignBottom="@+id/playbtn"
        android:layout_centerHorizontal="true"
        android:onClick="pauseBgm"
        android:text="Pause"
        android:textSize="18sp" />

    <Button
        android:id="@+id/stopbtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/pausebtn"
        android:layout_marginEnd="18dp"
        android:onClick="stopBgm"
        android:text="Stop"
        android:textSize="18sp" />


</RelativeLayout>
